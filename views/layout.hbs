<body>
  <div>
    <nav class="navbar navbar-expand-lg  containerGlobalNavbar">

      <div id="logo">
        <a href="/"><img src="/images/logo_comic_blue.png" alt="logo rabbit" class="logo"></a>
      </div>

      <div class="redNavbar" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto ">
          <li class="nav-item">
            <a class="nav-link letterTitle letterColorWhite" href="/auth/signup">Singup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link letterTitle letterColorWhite" href="/auth/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link letterTitle letterColorWhite" href="/auth/logout">Logout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link letterTitle letterColorWhite" href="/search/search">Search</a>
          </li>
          <li class="nav-item">
            <a class="nav-link letterTitle letterColorWhite" href="/profile/{{_id}}">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link letterTitle letterColorWhite" href="/read/mustRead">Must read</a>
          </li>
          <li class="nav-item">
            <a class="nav-link letterTitle letterColorWhite" href="/store">Find store</a>
          </li>
          <br><br>
          <div>
            <li class="nav-item">
              {{#if user}}
              <img src="{{user.imgPath}}" alt="profile image" width="50" height="50" class="profileImgNav">
            </li>
            <li>
              {{/if}}
            </li>
          </div>
        </ul>
      </div>
    </nav>
  </div>
  <div>
    {{{body }}}
