<h1 class="formtitle">Add your comic</h1>
<hr class="hrNewComic">


<div class="container">
  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100"></h1>
    </div>

    <div class="col-md-6 marginbotton">
      <form action="/newComic/newComic" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <input style="border:1px solid #77abd4; background: #f8f7e8; font-family= 'Alegreya Sans'" name="name"
            type="text" class="form-control" id="name-input" placeholder="Name" required>
        </div>

        <div class="form-group">
          <input style="border:1px solid #77abd4; background: #f8f7e8" name="description" type="text"
            class="form-control" id="description-input" placeholder="Description" required>
        </div>

        <div class="form-group">
          <input style="border:1px solid #77abd4; background: #f8f7e8" name="issuesNumber" type="text"
            class="form-control" id="issues-input" placeholder="Issues number" required>
        </div>

        <div class="form-group">
          <label for="type-list">Resource Types:</label>
          <select style="border:1px solid #77abd4; background: #f8f7e8" name="resourceTypes" class="form-control"
            id="type-list" required>
            <option disabled selected value>Select Option</option>
            <option>Volume</option>
            <option>Issue</option>
          </select>
        </div>

        <div class="form-group">
          <input style="border:1px solid #77abd4; background: #f8f7e8" name="publisherName" type="text"
            class="form-control" id="publisher-input" placeholder="Publisher name" required>
        </div>

        <div class="form-group">
          <input style="border:1px solid #77abd4; background: #f8f7e8" name="volume" type="text" class="form-control"
            id="volume-input" placeholder="Volume" required>
        </div>

        <label for="image">Upload your comic picture</label>
        <input id="image" type="file" name="imgPath" placeholder="Your image" required>
        <br>
        <br>
        <div class="row d-flex justify-content-around">
          <button class="buttonform" type="submit" class="btn">Create</button>
          <a class="buttonform" href="/newComic/comicsList" class="btn btn-dark">Back</a>
        </div>
      </form>
    </div>
  </div>
</div>
<img id="newPic" src="/images/coupel.png" alt="">