<div class="container">

  <div id="signup" class="row d-flex justify-content-around">

    <div class="col-md-6">
      <img src="/images/signup-hero.png" alt="image super hero" class="imgSingup">
    </div>

    <div class="d-flex justify-content-end">
      <div class="col-md-6">

        <h2 class="letterColorRed letterText">Signup</h2>
        <hr class="hrLogin">
        <br>
        <form action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">

          <div>
            <input id="username" type="text" name="username" placeholder="Your name" required class="loginBox">
          </div>
          <br>
          <div>
            <input id="email" type="email" name="email" placeholder="Your email" required class="loginBox">
          </div>
          <br>
          <div>
            <input id="password" type="password" name="password" placeholder="Your password" required class="loginBox">
          </div>
          <br>
          {{#if message }}
          <div class="error-message">{{ message }}</div>
          {{/if}}
          <br>
          <div>
            <input type="file" name="imgPath" placeholder="Your image" required class="buttomImgUpload">
          </div>
          <br>
          <div>
            <button type="submit" class="letterText buttomSignup">Create account</button>
          </div>
          <hr class="hrLogin">
        </form>
        <br>
        <div class="create-parag">
          <p class="account-message letterColorRed accountSingup"> Do you already have an account?
            <a href="/auth/login"> <span class="letterColorOrange">Login</span></a></p>
        </div>
      </div>
    </div>
  </div>

